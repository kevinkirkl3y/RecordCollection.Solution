@{
  Layout = "_Layout";
}
<div class="container">
  @using RecordCollection.Models;

  @model List<RecordCollection.Models.Album>;

  <h1>Your Albums:</h1>
  <hr />

  @if (@Model.Count == 0)
  {
    <h3>You currently have no albums logged.</h3>
  }

  @foreach (Album album in Model)
  {
      <li>@Html.ActionLink($"{album.AlbumName}", "Details", new { id = album.AlbumId})</li><br>
  }
  <br><p>@Html.ActionLink("Log new album", "Create")</p>
  <br><p>@Html.ActionLink("Homepage", "Index", "Home")</p>
</div>